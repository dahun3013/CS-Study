		// 문제 6
		Scanner sc = new Scanner(System.in);
		System.out.print("실수입력 : ");
		double kgNum = sc.nextDouble();
		double pound = kgNum / 0.453592;
		System.out.printf("%.3f\n",pound);
		pound*=1000;
		pound= (int)pound/1000.0;
		System.out.println(pound);
	}
}

