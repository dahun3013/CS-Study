		Scanner sc = new Scanner(System.in);
		System.out.print("윤년 계산 년도 입력: ");
		int year = sc.nextInt();
		if((year%4 == 0 && year % 100 != 0) || year % 400 ==0) {
			System.out.println(year+"년은 윤년입니다.");
		}else
			System.out.println(year+"년은 윤년이 아닙니다.");
		
	}
