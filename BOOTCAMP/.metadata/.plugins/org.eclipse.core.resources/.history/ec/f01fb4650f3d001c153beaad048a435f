package day4;

public class ForEx {
	public static void main(String[] args) {
		System.out.println(8%7);
		for(int i=0; i<7; i++) {
			for(int j=7; j>0; j--) {
				if(j==(i*2) && i<4)
					break;
				else if(j==(i%4)*2 && i>=4)
					break;
				System.out.print("*");
			}
			System.out.println("");
		}
	}

}
