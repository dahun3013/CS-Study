package day4;

public class ForEx {
	public static void main(String[] args) {
		System.out.println(8%7);
		for(int i=0; i<7; i++) {
			if(i<=7/2) {
				for(int j=7; j>0; j--) {
					if(j==(i*2))
						break;
					System.out.print("*");
				}
			}else {
				for(int j=0; j<7; j++) {
					if(j==((i-1)%(7/2))*2)
						break;
					System.out.print("*");
				}
			}
			System.out.println("");
		}
	}

}
