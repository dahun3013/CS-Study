		Scanner sc = new Scanner(System.in);
		int number = sc.nextInt();
		int money500 = number/500;
		System.out.println("500원짜리: "+money500);
		int money100 = (number-money500*500)/100;
		System.out.println("100원짜리: "+money100);
		int money50 = (number-money100*100)/50;
		System.out.println("50원짜리: "+money50);
		int money10 = (number-money50*50)/10;
		System.out.println("10원짜리: "+money10);
		int sum = money500*500+money100*100+money50*50+money10*10;
		System.out.println("바꾸지 못한 잔돈: "+(number-sum));
		
	}
}
