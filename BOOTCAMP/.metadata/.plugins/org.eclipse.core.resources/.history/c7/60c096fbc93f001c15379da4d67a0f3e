import java.util.Scanner;

public class HomeWork2 {

	public static void main(String[] args) {
		String[] code = new String[3];
		int[][] report = new int[3][6];
		
		for (int i=0; i<3; i++) {
			System.out.println((i+1) + "번째 제품정보");
			Scanner sc = new Scanner(System.in);
			System.out.print("제품코드를 입력하세요 ==>");
			code[i] = sc.nextLine(); // 제품코드
			System.out.print("생산원가를 입력하세요 ==>");
			report[i][0] = sc.nextInt(); // 생산원가
			System.out.print("입고량을 입력하세요 ==>");
			report[i][1] = sc.nextInt(); // 입고량
			System.out.print("판매량을 입력하세요 ==>");
			report[i][2] = sc.nextInt(); // 판매량
			System.out.println();
			
			report[i][3] = report[i][1] - report[i][2]; // 재고량
			report[i][4] = report[i][0] * report[i][2] * 6 / 5; // 판매금액
			report[i][5] = report[i][4] - (report[i][0] * report[i][2]); // 수입금액			
			}
		
		System.out.println("========================================================================");
		System.out.println("\t하이마트 제품코드별 보고서");
		System.out.println("-----------------------------------------------");
		System.out.println("제품코드\t\t생산원가\t입고량\t판매량\t재고량\t판매금액\t수입금액");
		System.out.println("-----------------------------------------------");
		for (int i=0; i<3; i++) {
			System.out.print(code[i]+ "\t");
			for (int j=0; j<6; j++) {
			System.out.print(report[i][j]+ "\t");
			}
			System.out.println();
		}
		System.out.println("-----------------------------------------------");
		
		String[] syn = {"합계","평균","최대값"}; 
		double[][] SumAvg = new double[3][6];
		
		for (int i = 0; i < 6; i++) {
			SumAvg[0][i] = report[0][i] + report[1][i] + report[2][i]; // 합계
			SumAvg[1][i] = SumAvg[0][i] / 3; // 평균
			for (int j = 0; j < 3; j++) {
				if (SumAvg[2][i] < report[j][i]) {
					SumAvg[2][i] = report[j][i]; // 최대값
				}
			}
		}
		for (int i =0; i<3; i++) {
			System.out.print(syn[i]+ "\t\t");
			for (int j =0; j<6; j++){
			System.out.print((int)Math.round(SumAvg[i][j])+ "\t");
			}
			System.out.println();
		}	
	
		System.out.println();
		System.out.println("========================================================================");
		
		
	} // End main
} // End class